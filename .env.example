# Default root directory
DEFAULT_ROOT_DIR_OF_THE_PROJECT_WHERE_ATI18N_WILL_BE_USED="../../"

# Locales for auto translation
ALLOWED_LOCALES="en"

# Translation service
DEFAULT_TRANSLATOR_SERVICE="google"

# OpenAI
OPENAI_API_KEY=<your_openai_api_key> # If you don't have you can register your OpenAI API key on the OpenAI's website (Note: you can also pass the key after build the module during its runtime)
OPENAI_CHAT_COMPLETION_MODELS="text-davinci-003, text-davinci-002"
DEFAULT_OPENAI_CHAT_COMPLETION_MODEL=text-davinci-003
DEFAULT_OPENAI_TRANSLATION_METHODS="chat, text"
DEFAULT_OPENAI_TRANSLATION_METHOD=chat

# Supported files extensions for scanning
SUPPORTED_FILE_EXTENSIONS=".ts,.tsx,.js,.jsx,.cjs,.mjs"

# Debug mode
DEBUG_MODE=true # Set to true to print debug during the module run

# Shorten the ```translate|t|i18n?.t("{key}", "{default_text"}, "{namespace}")``` to ```translate|t|i18n?.t("{key}", "{namespace}")```
SHORTEN_AND_REWRITE=false # Default: true

# AI guess for missing translation by key
# Note: This feature needs OpenAI API key and translation service as "openai"
TRY_TO_GUESS_POSSIBLE_TRANSLATION_BY_KEY=false # Default: false

# Maximum number of translation retries
MAX_TRANSLATION_RETRIES=3

# Default translation timeout (in milliseconds)
DEFAULT_TRANSLATION_TIMEOUT=5000

# Output directory for translated files
TRANSLATION_OUTPUT_DIR="./translations"

# Log file path
LOG_FILE_PATH="./logs/ati18n.log"

# Placeholder for missing translations
MISSING_TRANSLATION_PLACEHOLDER="TRANSLATION_MISSING"

# API endpoint for custom translation service
CUSTOM_TRANSLATION_API_ENDPOINT="http://localhost:3000/api/translate"

# Default retry interval (in milliseconds) for translation requests
DEFAULT_TRANSLATION_RETRY_INTERVAL=1000

# Enable automatic translation for specific file types
AUTO_TRANSLATE_FILE_TYPES=".tsx,.jsx"

# Default target language for auto translation
DEFAULT_AUTO_TRANSLATE_TARGET_LANG="fr"

# Flag to enable/disable auto translation
AUTO_TRANSLATION_ENABLED=true
